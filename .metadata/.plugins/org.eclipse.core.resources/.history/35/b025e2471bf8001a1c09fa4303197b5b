package application;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		int m = sc.nextInt();
		int n = sc.nextInt();
		int[][] mat = new int[m][n];

		for (int i = 0; i < mat.length; i++) {
			for (int j = 0; j < mat[i].length; j++) {
				mat[i][j] = sc.nextInt();
			}
		}
		System.out.println();
		System.out.print("Digite o valor procurado na matriz: ");
		int x = sc.nextInt();
		System.out.println();
		for (int i = 0; i < mat.length; i++) {
			for (int j = 0; j < mat[i].length; j++) {
				if (mat[i][j] == x) {

					System.out.println("Position: " + i + "," + j);
					System.out.println("Tamanho Array mat.length: " + mat.length);
					System.out.println("Tamanho Array i: " + mat[i].length);
					System.out.println("Tamanho Array i: " + mat[j].length);
					
					if ((j - 1) >= 0) {
						System.out.println("Left: " + mat[i][(j - 1)]);
					}

					if ((j + 1) <= mat[j].length) {
						System.out.println("Right: " + mat[i][(j + 1)]);
					}

					if ((i - 1) >= 0) {
						System.out.println("Up: " + mat[(i - 1)][j]);
					}

					if ((i + 1) < mat.length) {
						System.out.println("Down: " + mat[(i + 1)][j]);
					}
					System.out.println();
				}
			}
		}
		sc.close();
	}
}